@model IEnumerable<ImmoBLL.Interfaces.IInfoUtilisateur>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h3 class="mb-3">Liste des gestionnaires</h3>

    <a class="btn btn-primary mb-3" asp-action="Create">Nouveau gestionnaire</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    Prénom
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    @if (item.Type == ImmoBLL.Classes.TypeUtilisateur.GestionnaireDeBiens)
                    {
                        <td>Gestionnaire de biens</td>
                    }
                    else
                    {
                        <td>Gestionnaire de ventes</td>
                    }
                    <td>
                        <a class="btn btn-sm btn-primary" href="/Gestionnaire/Details/@item.Id">Détails</a>
                        <a class="btn btn-sm btn-primary" href="/Gestionnaire/Edit/@item.Id">Éditer</a>
                        @*@Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Editer", "Edit", new { id = item.Id })*@
                        @*| @Html.ActionLink("Désactiver", "Desactivate", new {id=item.Id })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
